@model SystemBroni.Models.VipRoomBooking

<h2>Редактировать бронирование VIP-комнаты</h2>

<form method="post" action="@Url.Action("Update", "VipRoomBooking", new { id = Model.Id })">
    <div>
        <label>Имя пользователя</label>
        <input type="text" name="User.Name" value="@Model.User.Name" required />
    </div>
    <div>
        <label>Телефон</label>
        <input type="text" name="User.Phone" value="@Model.User.Phone" required />
    </div>
    <div>
        <label>VIP-комната</label>
        <select name="vipRoomId" required>
            @foreach (var vipRoom in ViewBag.VipRooms)
            {
                <option value="@vipRoom.Id"
                        selected="@(vipRoom.Id == Model.VipRoom.Id ? "selected" : null)">
                    @vipRoom.Name (Вместимость: @vipRoom.Capacity)
                </option>
            }
        </select>
    </div>
    <div>
        <label>Начало бронирования</label>
        <input type="datetime-local" name="StartTime"
               value="@Model.StartTime.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")" required />
    </div>
    <div>
        <label>Окончание бронирования</label>
        <input type="datetime-local" name="EndTime"
               value="@Model.EndTime.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <br />
    <button type="submit" class="btn btn-warning">Сохранить</button>
    <a href="@Url.Action("GetAll", "VipRoomBooking")" class="btn btn-secondary">Отмена</a>
</form>