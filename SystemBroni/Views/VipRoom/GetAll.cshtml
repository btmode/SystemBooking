@model IEnumerable<SystemBroni.Models.VipRoom>

@{
    ViewData["Title"] = "Список VIP-комнат";
    int pageNumber = ViewBag.PageNumber;
    int pageSize = ViewBag.PageSize;
    int startIndex = (pageNumber - 1) * pageSize + 1;
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Список VIP-комнат</h2>

    <!-- Форма поиска -->
    <div class="row mb-3">
        <div class="col-md-6 mx-auto">
            <form asp-action="GetByName" method="get" class="input-group">
                <input type="text" name="name" class="form-control" placeholder="Введите название комнаты" required />
                <button type="submit" class="btn btn-primary">🔍 Найти</button>
            </form>
        </div>
    </div>

    <!-- Сообщение об ошибке -->
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning text-center">@ViewBag.Message</div>
    }

    <!-- Кнопка назад к списку -->
    @if (!string.IsNullOrEmpty(Convert.ToString(ViewBag.SearchQuery)))
    {
        <div class="text-center mb-3">
            <a href="@Url.Action("GetAll", new { pageNumber = 1, pageSize = ViewBag.PageSize })" class="btn btn-secondary">⬅ Назад к списку</a>
        </div>
    }

    <!-- Кнопка для возврата в панель админа -->
    <div class="mb-3">
        <a href="/Admin/Panel" class="btn btn-light">🔙 Вернуться в панель</a>
    </div>

    <!-- Кнопка добавления комнаты -->
    <div class="mb-3">
        <a href="/VipRoom/Create" class="btn btn-success">➕ Создать VIP-комнату</a>
    </div>

    <!-- Таблица -->
    <div class="table-responsive">
        <table class="table table-striped table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Название</th>
                    <th>Вместимость</th>
                    <th>Редактировать</th>
                    <th>Удаление</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int i = startIndex;
                    @foreach (var vipRoom in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@vipRoom.Name</td>
                            <td>@vipRoom.Capacity</td>                            

                            <!-- Кнопки -->
                            <td>
                                <a href="/VipRoom/Update/@vipRoom.Id" class="btn btn-warning btn-sm">✏ Редактировать</a>
                            </td>
                            <td>
                                <a href="/VipRoom/Delete/@vipRoom.Id" class="btn btn-danger btn-sm" onclick="return confirm('Вы уверены?')">🗑 Удалить</a>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Нет данных</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Пагинация -->
    <div class="text-center mt-3">
        @if (pageNumber > 1)
        {
            <a href="@Url.Action("GetAll", new { pageNumber = pageNumber - 1, pageSize = pageSize })" class="btn btn-primary">← Назад</a>
        }

        @if (Model.Count() == pageSize)
        {
            <a href="@Url.Action("GetAll", new { pageNumber = pageNumber + 1, pageSize = pageSize })" class="btn btn-primary">Вперед →</a>
        }
    </div>
</div>
