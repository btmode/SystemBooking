@model IEnumerable<SystemBroni.Models.TableBooking>

@{
    ViewData["Title"] = "Список бронирований";
    int pageNumber = ViewBag.PageNumber;
    int pageSize = ViewBag.PageSize;
    int startIndex = (pageNumber - 1) * pageSize + 1;
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Список бронирований</h2>

    
    <!-- Форма поиска -->
    <div class="row mb-3">
        <div class="col-md-6 mx-auto">
            <form asp-action="GetAll" method="get" class="input-group">
                <input type="text" name="name" class="form-control" value="@ViewBag.SearchQuery" placeholder="Введите имя пользователя" required />
                <button type="submit" class="btn btn-primary">🔍 Найти</button>
            </form>
        </div>
    </div>

    <!-- Сообщение об ошибке -->
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning text-center">@ViewBag.Message</div>
    }

    <!-- Кнопка назад к списку -->
    @if (!string.IsNullOrEmpty(ViewBag.SearchQuery))
    {
        <div class="text-center mb-3">
            <a href="@Url.Action("GetAll", new { pageNumber = 1, pageSize = ViewBag.PageSize })" class="btn btn-secondary">⬅ Назад к списку</a>
        </div>
    }

    <!-- Кнопка для возврата в панель админа -->
    <div class="mb-3">
        <a href="/Admin/Panel" class="btn btn-light">🔙 Вернуться в панель </a>
    </div>

    <!-- Кнопка добавления бронирования -->
    <div class="mb-3">
        <a href="/TableBooking/Create" class="btn btn-success">➕ Создать бронирование</a>
    </div>

    <!-- Таблица бронирований -->
    <div class="table-responsive">
        <table class="table table-striped table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Имя пользователя</th>
                    <th>Телефон</th>
                    <th>Номер стола</th>
                    <th>Вместимость</th>
                    <th>Дата бронирования</th>
                    <th>Редактировать</th>
                    <th>Удаление</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int i = startIndex;
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@booking.User.Name</td>
                            <td>@booking.User.Phone</td>
                            <td>@booking.Table.Name</td>
                            <td>@booking.Table.Capacity</td>
                            <td>
                                <strong>С:</strong> @booking.StartTime.ToString("dd.MM.yyyy HH:mm")
                                <br />
                                <strong>По:</strong> @booking.EndTime.ToString("dd.MM.yyyy HH:mm")
                            </td>

                            <td>
                                <a href="/TableBooking/Update/@booking.Id" class="btn btn-warning btn-sm">✏ Редактировать</a>
                            </td>
                            <td>
                                <a href="/TableBooking/Delete/@booking.Id" class="btn btn-danger btn-sm" onclick="return confirm('Вы уверены?')">🗑 Удалить</a>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center">Нет данных</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

    <!-- Пагинация -->
    <div class="text-center mt-3">
        @if (pageNumber > 1)
        {
            <a href="@Url.Action("GetAll", new { pageNumber = pageNumber - 1, pageSize = pageSize, name = ViewBag.SearchQuery })" class="btn btn-primary">← Назад</a>
        }

        @if (Model?.Count() == pageSize)
        {
            <a href="@Url.Action("GetAll", new { pageNumber = pageNumber + 1, pageSize = pageSize, name = ViewBag.SearchQuery })" class="btn btn-primary">Вперед →</a>
        }

    </div>
</div>
