@model List<SystemBroni.Models.User>

@{
    ViewData["Title"] = "Список пользователей";
}

<h2>Список пользователей</h2>

<div>
    <a href="/Crud/CreateUser" class="btn btn-success">Создать пользователя</a>
</div>
<br />

@if (Model.Count == 0)
{
    <p>Пользователей нет.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                </tr>
            }
        </tbody>
    </table>
}
