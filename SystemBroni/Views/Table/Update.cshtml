@model SystemBroni.Models.Table

@{
    ViewData["Title"] = "Редактировать стол";
}

<h2>✏ Редактировать стол</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Номер столика</label>
        <input asp-for="Number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Вместимость</label>
        <input asp-for="Capacity" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Статус</label>
        <select asp-for="Status" class="form-select">
            <option value="Available">Свободен</option>
            <option value="Booked">Забронирован</option>
            <option value="Occupied">Занят</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">💾 Сохранить</button>
    <a href="/Table/GetAll" class="btn btn-secondary">❌ Отмена</a>
</form>
