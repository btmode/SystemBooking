@model IEnumerable<SystemBroni.Models.Table>

@{
    ViewData["Title"] = "Список столов";
    int pageNumber = ViewBag.PageNumber;
    int pageSize = ViewBag.PageSize;
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Список столов</h2>


    <!-- Форма поиска -->
    <div class="row mb-3">        
        <div class="col-md-6 mx-auto">
            <form asp-action="GetByNumber" method="get" class="input-group">
                <input type="text" name="number" class="form-control" placeholder="Введите номер стола" required />
                <button type="submit" class="btn btn-primary">🔍 Найти</button>
            </form>
        </div>

    </div>


    <!-- Сообщение об ошибке -->
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning text-center">@ViewBag.Message</div>
    }


    <!-- Кнопка назад к списку -->
    @if (!string.IsNullOrEmpty(Convert.ToString(ViewBag.SearchQuery)))

    {
        <div class="text-center mb-3">
            <a href="@Url.Action("GetAll", new { pageNumber = 1, pageSize = ViewBag.PageSize })" class="btn btn-secondary">⬅ Назад к списку</a>
        </div>
    }


    <!-- Кнопка для возврата в панель админа -->
    <div class="mb-3">
        <a href="/Admin/Panel" class="btn btn-light">🔙 Вернуться в панель </a>
    </div>


    <!-- Кнопка добавления стола -->
    <div class="mb-3">
        <a href="/Table/Create" class="btn btn-success">➕ Создать стол</a>
    </div>


    <!-- Таблица -->
    <div class="table-responsive">
        <table class="table table-striped table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Номер стола</th>
                    <th>Вместимость</th>
                    <th>Статус</th>
                    <th>Редактировать</th>
                    <th>Удаление</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var table in Model)
                {
                    <tr>
                        <td>@table.Number</td>
                        <td>@table.Capacity</td>
                        <td>
                            @if (table.Status == TableStatus.Available)
                            {
                                <span class="badge bg-success">Свободен</span>
                            }
                            else if (table.Status == TableStatus.Booked)
                            {
                                <span class="badge bg-warning">Забронирован</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Занят</span>
                            }
                        </td>

                        <!-- Разделенные кнопки -->
                        <td>
                            <a href="/Table/Update/@table.Id" class="btn btn-warning btn-sm">✏ Редактировать</a>
                        </td>
                        <td>
                            <a href="/Table/Delete/@table.Id" class="btn btn-danger btn-sm">🗑 Удалить</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Пагинация -->
    <div class="text-center mt-3">
        @if (pageNumber > 1)
        {
            <a href="@Url.Action("GetAll", new { pageNumber = pageNumber - 1, pageSize = pageSize })" class="btn btn-primary">← Назад</a>
        }

        @if (Model.Count() == pageSize)
        {
            <a href="@Url.Action("GetAll", new { pageNumber = pageNumber + 1, pageSize = pageSize })" class="btn btn-primary">Вперед →</a>
        }
    </div>

</div>
