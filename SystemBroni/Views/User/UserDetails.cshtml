@model SystemBroni.Models.User

<div class="container mt-4">
    <h2 class="text-center mb-4">👤 Данные пользователя</h2>

    <div class="card shadow-lg p-4 mb-4 bg-white rounded">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th class="bg-light w-25">Имя:</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th class="bg-light">Email:</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th class="bg-light">Телефон:</th>
                    <td>@Model.Phone</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-3">
            <a href="@Url.Action("GetAll", "User")" class="btn btn-secondary">⬅ Назад к списку</a>
        </div>
    </div>
</div>
