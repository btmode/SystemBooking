@model IEnumerable<SystemBroni.Models.User>

@{
    ViewData["Title"] = "Список пользователей";
    int pageNumber = ViewBag.PageNumber;
    int pageSize = ViewBag.PageSize;
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Список пользователей</h2>


    <!-- Форма поиска -->
    <div class="row mb-3">
        <div class="col-md-6 mx-auto">
            <form asp-action="GetByName" method="get" class="input-group">
                <input type="text" name="name" class="form-control" placeholder="Введите имя" required />
                <button type="submit" class="btn btn-primary">🔍 Найти</button>
            </form>
        </div>
    </div>

    <!-- Сообщение об ошибке -->
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning text-center">@ViewBag.Message</div>
    }

    <!-- Кнопка назад к списку -->
    @if (!string.IsNullOrEmpty(ViewBag.SearchQuery))
    {
        <div class="text-center mb-3">
            <a href="@Url.Action("GetAll", new { pageNumber = 1, pageSize = ViewBag.PageSize })" class="btn btn-secondary">⬅ Назад к списку</a>
        </div>
    }

    <!-- Кнопка для возврата в панель админа -->
    <div class="mb-3">
        <a href="/Admin/Panel" class="btn btn-light">🔙 Вернуться в панель </a>
    </div>

    <!-- Кнопка создания пользователя -->
    <div class="mb-3">
        <a href="/User/Create" class="btn btn-success">➕ Создать пользователя</a>
    </div>

    <!-- Таблица пользователей -->
    <div class="table-responsive">
        <table class="table table-striped table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Имя</th>
                    <th>Email</th>
                    <th>Телефон</th>
                    <th>Редактировать</th>
                    <th>Удаление</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>
                            <a href="/User/Update/@user.Id" class="btn btn-warning btn-sm">✏ Редактировать</a>
                        </td>
                        <td>
                            <a href="/User/Delete/@user.Id" class="btn btn-danger btn-sm">🗑 Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Пагинация -->
    <div class="d-flex justify-content-center mt-4">
        @if (pageNumber > 1)
        {
            <a href="@Url.Action("GetAll", new { pageNumber = pageNumber - 1, pageSize = pageSize })" class="btn btn-primary me-2">⬅ Назад</a>
        }

        @if (Model.Any() && Model.Count() == pageSize)
        {
            <a href="@Url.Action("GetAll", new { pageNumber = pageNumber + 1, pageSize = pageSize })" class="btn btn-primary">Вперед ➡</a>
        }
    </div>
</div>
