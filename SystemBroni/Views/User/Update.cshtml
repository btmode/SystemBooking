@model SystemBroni.Models.User

<h2>Редактирование пользователя</h2>

<form method="post" action="/User/Update/">
    <div>
        <label>Имя:</label>
        <input type="text" name="Name" value="@Model.Name" required />
    </div>
    <div>
        <label>Email:</label>
        <input type="email" name="Email" value="@Model.Email" required />
    </div>
    <div>
        <label>Телефон:</label>
        <input type="text" name="Phone" value="@Model.Phone" required />
    </div>
    <button type="submit">Сохранить</button>
</form>
<a href="/User/GetAll">Отмена</a>
