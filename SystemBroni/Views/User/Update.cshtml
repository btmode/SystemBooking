@model SystemBroni.Models.User

@{
    ViewData["Title"] = "Редактировать пользователя";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">✏ Редактирование пользователя</h2>

    <div class="card shadow-lg p-4 bg-white rounded">
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label fw-bold">Имя</label>
                <input asp-for="Name" class="form-control" placeholder="Введите новое имя..." required />
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Почта</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="Введите новый email..." required />
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Номер телефона</label>
                <input asp-for="Phone" class="form-control" placeholder="Введите новый номер телефона..." required />
            </div>

            <div class="text-center mt-3">
                <button type="submit" class="btn btn-success px-4">💾 Сохранить</button>
                <a href="@Url.Action("GetAll", "User")" class="btn btn-secondary px-4">❌ Отмена</a>
            </div>
        </form>
    </div>
</div>
