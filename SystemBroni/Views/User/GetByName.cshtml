@model IEnumerable<SystemBroni.Models.User>

@{
    ViewData["Title"] = "Список пользователей";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Список пользователей</h2>

    <!-- Форма поиска -->
    <div class="row mb-3">
        <div class="col-md-6 mx-auto">
            <form asp-action="GetUser" method="get" class="input-group">
                <input type="text" name="name" class="form-control" placeholder="Введите имя пользователя" required />
                <button type="submit" class="btn btn-primary">🔍 Найти</button>
            </form>
        </div>
    </div>

    <!-- Кнопка создания пользователя -->
    <div class="text-center mb-3">
        <a href="/User/Create" class="btn btn-success">➕ Создать пользователя</a>
    </div>

    <!-- Таблица пользователей -->
    <div class="table-responsive">
        <table class="table table-striped table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Имя</th>
                    <th>Email</th>
                    <th>Телефон</th>
                    <th colspan="2">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>
                            <a href="/User/Update/@user.Id" class="btn btn-warning btn-sm">✏ Редактировать</a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-danger btn-sm">🗑 Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
